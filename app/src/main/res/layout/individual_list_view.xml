<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/padd_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/padd_10">

        <ImageView
            android:id="@+id/iv_listImage"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_centerVertical="true"
            android:background="@drawable/describe" />

        <TextView
            android:id="@+id/tv_listName"
            android:text="@string/action_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lines="1"
            android:layout_toLeftOf="@+id/iv_listEdit"
            android:layout_toRightOf="@+id/iv_listImage"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_listOwner"
            android:text="@string/action_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:lines="1"
            android:layout_below="@+id/tv_listName"
            android:layout_toLeftOf="@+id/iv_listEdit"
            android:layout_toRightOf="@+id/iv_listImage"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/iv_listEdit"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_mode_edit_black_24dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
